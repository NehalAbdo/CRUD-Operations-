    <partial name="DPartialViews/DeleteEditPartialView"></partial>

    <div class="mt-5">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-light ">Cancel</a>


    </div>

</form>