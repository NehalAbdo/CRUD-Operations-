@model IEnumerable<UserVMcs>
@{
    ViewData["Title"] = "Users";
}

<br />

<div class="mt-2">
    <form class="row offset-1" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" placeholder="Employee's Name" name="searchValue" />
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-info" value="Search" />
        </div>
    </form>
</div>
@* <div class="alert alert-success">
    <h1>@ViewData["Message"]</h1>
</div> *@
@if (Model.Any())
{
    <h1 class=" mt-3">All Employees</h1>
    <br />

    <table class="table table-striped table-hover mt-3">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Id)</td>
                <td>@Html.DisplayNameFor(d => d.FName)</td>
                <td>@Html.DisplayNameFor(d => d.LName)</td>
                <td>@Html.DisplayNameFor(d => d.Email)</td>
                <td>@Html.DisplayNameFor(d => d.Roles)</td>


                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user
            in Model)
            {
                <tr>
                    <td>@user.Id</td>

                    <td>@user.FName</td>
                    <td>@user.LName</td>
                    <td> @Html.DisplayFor(e => user.Email)</td>
                    <td> @string.Join(",",user.Roles)</td>
            
                    <partial name="_ButtonsPartialView" model="@user.Id">  </partial>

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>No User</h1>
    </div>
}