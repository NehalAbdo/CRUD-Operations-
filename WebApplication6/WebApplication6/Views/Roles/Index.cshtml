@model IEnumerable<RoleVM>
@{
    ViewData["Title"] = "Roles";
}

<a asp-action="Create" class=" btn btn-success mt-5">Add New Role</a>
<br />

<div class="mt-2">
    <form class="row offset-1" asp-action="Index">
        <div class="col-8">
            <input class="form-control" type="text" placeholder="Role's Name" name="searchValue" />
        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-info" value="Search" />
        </div>
    </form>
</div>
@if (Model.Any())
{
    <h1 class=" mt-3">All Roles</h1>
    <br />

    <table class="table table-striped table-hover mt-3">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(r => r.Name)</td>
              
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    
                    <partial name="_ButtonsPartialView" model="@role.Id.ToString()">  </partial>

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>No Roles</h1>
    </div>
}