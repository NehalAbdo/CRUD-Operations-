@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
}

<a asp-action="create" class=" btn btn-success mt-5">Create New Department</a>
<br />
@* <div class="alert alert-success">
    <h1>@ViewData["Message"]</h1>
</div> *@
@if (Model.Any())
{
    <h1 class=" mt-3">All Departments</h1>
    <table class="table table-striped table-hover mt-3">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.CreatedAt)</td>


                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreatedAt</td>

                    <partial name="_ButtonsPartialView" model="@department.Id.ToString()"> </partial>


                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h1>No Departments</h1>
    </div>
}